<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:background="@drawable/border"
    android:padding="@dimen/_4sdp">

    <TextView
        android:id="@+id/txtFirstChar"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/background_profile"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewDivider"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/black"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtFirstChar"
        app:layout_constraintTop_toBottomOf="@id/txtFirstChar" />

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/viewSupporter"
        app:layout_constraintEnd_toStartOf="@id/imageAudiMeeting"
        app:layout_constraintStart_toEndOf="@id/txtFirstChar" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        app:layout_constraintEnd_toStartOf="@id/imageAudiMeeting"
        app:layout_constraintStart_toEndOf="@id/txtFirstChar"
        app:layout_constraintTop_toBottomOf="@id/viewSupporter" />


    <ImageView
        android:id="@+id/imageVideoMeeting"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/ic_round_videocam_24"
        app:layout_constraintBottom_toTopOf="@id/viewDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageAudiMeeting"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/ic_round_call_24"
        app:layout_constraintBottom_toBottomOf="@id/imageVideoMeeting"
        app:layout_constraintEnd_toStartOf="@id/imageVideoMeeting"
        app:layout_constraintTop_toTopOf="@id/imageVideoMeeting"
        app:tint="@color/colorPrimary" />

    <View
        android:id="@+id/viewSupporter"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="@dimen/_1sdp"
        app:layout_constraintBottom_toBottomOf="@id/txtFirstChar"
        app:layout_constraintStart_toEndOf="@id/txtFirstChar"
        app:layout_constraintTop_toTopOf="@id/txtFirstChar" />

</androidx.constraintlayout.widget.ConstraintLayout>